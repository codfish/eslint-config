{
  "name": "@codfish/eslint-config",
  "version": "0.0.0-semantically-released",
  "description": "Modern ESLint configuration with TypeScript, React, and testing framework support.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codfish/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "codfish",
    "prettier",
    "javascript",
    "styleguide"
  ],
  "author": "Chris O'Donnell <chris@codfish.dev> (https://www.codfish.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codfish/eslint-config/issues"
  },
  "homepage": "https://github.com/codfish/eslint-config#readme",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./index.js"
    },
    "./prettier": {
      "types": "./dist/prettier.d.ts",
      "default": "./prettier.js"
    },
    "./dapp": {
      "types": "./dist/dapp.d.ts",
      "default": "./dapp.js"
    },
    "./docker": {
      "types": "./dist/docker.d.ts",
      "default": "./docker.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "eslint --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^10.0.0",
    "@eslint/json": "^1.0.1",
    "@eslint/markdown": "^7.5.1",
    "@html-eslint/eslint-plugin": "^0.55.0",
    "@html-eslint/parser": "^0.55.0",
    "@next/eslint-plugin-next": "^16.1.6",
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@vitest/eslint-plugin": "^1.6.9",
    "cosmiconfig": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.14.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.15.4",
    "eslint-plugin-yml": "^3.1.2",
    "globals": "^17.3.0",
    "lodash.has": "^4.5.2",
    "prettier": ">= 3",
    "read-package-up": "^12.0.0",
    "typescript-eslint": "^8.55.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "doctoc": "^2.2.1",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "files": [
    "dist",
    "rules",
    "index.js",
    "prettier.js",
    "dapp.js",
    "docker.js",
    "utils.js",
    "commitlint.js"
  ],
  "peerDependencies": {
    "eslint": ">= 10",
    "prettier": ">= 3"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "commitlint": {
    "extends": [
      "./commitlint"
    ]
  },
  "lint-staged": {
    "*.{json,css,md,yml}": [
      "prettier --write --config ./prettier.js"
    ],
    "*.md": [
      "prettier --write --config ./prettier.js",
      "doctoc --title '## Table of Contents'"
    ]
  },
  "volta": {
    "node": "24.13.0"
  }
}
